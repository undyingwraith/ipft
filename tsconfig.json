{
	"compilerOptions": {
		"sourceRoot": "./src",
		"allowJs": false,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"emitDeclarationOnly": false,
		"declarationMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"lib": [
			"ESNext",
			"Decorators",
			"dom",
			"dom.iterable"
		],
		"sourceMap": true,
		"strict": true,
		"baseUrl": ".",
		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
	},
	"include": [
		"src",
		"vite.config.ts"
	]
}
